entrypoint = "index.js"
modules = ["nodejs-20", "nix"]
hidden = [".config", "package-lock.json"]

[nix]
channel = "stable-25_05"

[unitTest]
language = "nodejs"

[deployment]
run = ["sh", "-c", "node server/index.js"]
deploymentTarget = "cloudrun"
ignorePorts = false
build = ["sh", "-c", "npm install && cd client && npm install && npm run build"]

[workflows]
runButton = "YCA CRM Development"

[[workflows.workflow]]
name = "YCA CRM Development"
author = 43369170
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "npm install"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "npm run dev"

[[workflows.workflow]]
name = "Production Start"
author = 43369170
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "npm install"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd client && npm install && npm run build"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd .."

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "NODE_ENV=production node server/index.js"

